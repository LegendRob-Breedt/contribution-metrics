{
  "name": "contribution-metrics",
  "version": "1.0.1",
  "description": "A Node.js service for tracking GitHub contribution metrics",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch --env-file=.env.dev src/index.ts",
    "debug": "tsx --inspect --env-file=.env.dev src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:coverage": "vitest --coverage",
    "test:db": "node src/test/utils/test-db-connection.mjs",
    "test:startup": "tsx --env-file=.env.dev src/test/utils/test-startup.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src",
    "typecheck": "tsc --noEmit",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "db:migrate": "typeorm migration:run",
    "db:revert": "typeorm migration:revert",
    "db:generate": "typeorm migration:generate"
  },
  "keywords": [
    "github",
    "metrics",
    "contributions",
    "typescript",
    "fastify"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@octokit/core": "^6.1.5",
    "@octokit/graphql": "^8.2.2",
    "@octokit/rest": "^21.1.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.49.2",
    "@opentelemetry/exporter-trace-otlp-http": "^0.202.0",
    "@opentelemetry/instrumentation": "^0.52.1",
    "@opentelemetry/instrumentation-fastify": "^0.39.0",
    "@opentelemetry/instrumentation-pino": "^0.41.0",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/sdk-node": "^0.202.0",
    "@opentelemetry/semantic-conventions": "^1.34.0",
    "fastify": "^5.4.0",
    "fastify-plugin": "^5.0.1",
    "fastify-zod-openapi": "^4.1.2",
    "neverthrow": "^6.2.2",
    "pg": "^8.16.3",
    "pino": "^9.7.0",
    "pino-pretty": "^11.3.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.25",
    "zod": "^3.25.67",
    "zod-config": "^1.1.0",
    "zod-openapi": "^4.2.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "@ninoseki/eslint-plugin-neverthrow": "^0.0.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.15.34",
    "@types/pg": "^8.15.4",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitest/coverage-v8": "^2.1.9",
    "better-sqlite3": "^12.2.0",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.5.1",
    "prettier": "^3.6.2",
    "sqlite3": "^5.1.7",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^2.1.9"
  },
  "packageManager": "pnpm@9.5.0"
}
