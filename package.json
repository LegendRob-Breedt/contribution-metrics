{
  "name": "contribution-metrics",
  "version": "1.0.1",
  "description": "A Node.js service for tracking GitHub contribution metrics",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src",
    "typecheck": "tsc --noEmit",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "db:migrate": "typeorm migration:run",
    "db:revert": "typeorm migration:revert",
    "db:generate": "typeorm migration:generate"
  },
  "keywords": [
    "github",
    "metrics",
    "contributions",
    "typescript",
    "fastify"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/swagger": "^9.0.0",
    "@fastify/swagger-ui": "^5.0.1",
    "@octokit/core": "^6.1.2",
    "@octokit/graphql": "^8.1.1",
    "@octokit/rest": "^21.0.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.49.1",
    "@opentelemetry/exporter-trace-otlp-http": "^0.202.0",
    "@opentelemetry/instrumentation": "^0.52.1",
    "@opentelemetry/instrumentation-fastify": "^0.39.0",
    "@opentelemetry/instrumentation-pino": "^0.41.0",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/sdk-node": "^0.202.0",
    "@opentelemetry/semantic-conventions": "^1.34.0",
    "fastify": "^5.0.0",
    "fastify-plugin": "^5.0.0",
    "fastify-zod-openapi": "^4.1.2",
    "neverthrow": "^6.2.2",
    "pg": "^8.12.0",
    "pino": "^9.3.2",
    "pino-pretty": "^11.2.2",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20",
    "zod": "^3.23.8",
    "zod-config": "^1.0.2",
    "zod-openapi": "^4.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@ninoseki/eslint-plugin-neverthrow": "^0.0.1",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.11.6",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitest/coverage-v8": "^2.0.4",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "vitest": "^2.0.4"
  },
  "packageManager": "pnpm@9.5.0"
}
